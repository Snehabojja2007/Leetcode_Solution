class Solution {
    public int countMajoritySubarrays(int[] nums, int target) {
        int n = nums.length;
        int ans = 0;

        for (int i = 0; i < n; i++) {
            int countTarget = 0; 
            for (int j = i; j < n; j++) {
                if (nums[j] == target) {
                    countTarget++;
                }
                if (countTarget * 2 > (j - i + 1)) {
                    ans++;
                }
            }
        }
        return ans;
    }
}
