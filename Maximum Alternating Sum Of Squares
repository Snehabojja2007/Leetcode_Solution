class Solution {
    public long maxAlternatingSum(int[] nums) {
        int n=nums.length;
        for(int i=0;i<nums.length;i++){
            if(nums[i]<0){
                nums[i]=Math.abs(nums[i]);
            }
        }
        Arrays.sort(nums);
        long ans=0;
        for(int i=n-1;i>=n/2;i--){
            ans+=nums[i]*nums[i];
        }
        for(int i=0;i<n/2;i++){
            ans-=nums[i]*nums[i];
        }
        return ans;
    }
}
